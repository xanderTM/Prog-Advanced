<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiIntroductie.Views.HomePage"
             Title="StackLayoutPage">
    <StackLayout>
        <HorizontalStackLayout>
            <Entry Placeholder="Naam" Margin="5" />
            <Entry Placeholder="E-mailadres" Keyboard="Email" Margin="5"/>
        </HorizontalStackLayout>

        <Entry Placeholder="Telefoonnummer" Keyboard="Telephone" Margin="5"/>

        <StackLayout Margin="5">
            <Label Text="Geslacht"/>
            <RadioButton Content="M" />
            <RadioButton Content="V"/>
            <RadioButton Content="Andere" />
        </StackLayout>

        <Button Text="Opslaan" />
        <Label Text="Uitvoer"/>
    </StackLayout>
</ContentPage>