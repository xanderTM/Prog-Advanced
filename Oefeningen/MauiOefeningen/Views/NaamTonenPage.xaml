<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MauiOefeningen.ViewModels"
             x:Class="MauiOefeningen.Views.NaamTonenPage"
             x:DataType="viewmodel:NaamTonenViewModel"
             Title="Naam tonen">
                
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Geef een naam in:"
                   Margin="5"
                       VerticalTextAlignment="Center"/>
            <Entry Placeholder="Naam" Text="{Binding Naam}"  WidthRequest="250"/>
        </HorizontalStackLayout>
        
        <HorizontalStackLayout>
            <Label Text="Geef een getal in:"
                   Margin="5"
                       VerticalTextAlignment="Center"/>
            <Entry Placeholder="getal" Text="{Binding Getal}" Margin="5" />
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Button Text="Naam Tonen" Margin="5" WidthRequest="550" BackgroundColor="#5B2DCB" TextColor="White" Command="{Binding NaamTonenCommand}"/>
            <Button Text="Resultaat leegmaken" Margin="5" WidthRequest="550" BackgroundColor="#5B2DCB" TextColor="White" Command="{Binding ResultaatLeegmakenCommand}" />
        </HorizontalStackLayout>
        <Label Text="{Binding Resultaat}" Margin="5" />
    </VerticalStackLayout>
</ContentPage>