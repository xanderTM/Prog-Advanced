<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MauiOefeningen.ViewModels"
             x:Class="MauiOefeningen.Views.AfbeeldingenPage"
             x:DataType="viewmodel:AfbeeldingViewModel"
             Title="Afbeeldingen">

    <VerticalStackLayout Padding="20" Spacing="15">

        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">

            <Label Text="Selecteer een getal:"
                   VerticalOptions="Center"/>

            <Label Text="{Binding Getal}"
                   VerticalOptions="Center"/>

            <Stepper Minimum="1"
                     Maximum="5"
                     Value="{Binding Getal}"
                     VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <Button Text="Afbeelding tonen"
        BackgroundColor="#5B2DCB"
        TextColor="White"
        HeightRequest="55"
        Command="{Binding VeranderAfbeeldingCommand}"
        HorizontalOptions="Start"
        WidthRequest="250"/>

        <Image Source="{Binding Resultaat}" WidthRequest="750"/>

    </VerticalStackLayout>
</ContentPage>
